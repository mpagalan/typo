<% if @article.resources.count > 0 %>
  <h4><%= _("Currently this article has the following resources")%></h4>
  <% for resource in @article.resources %>
    <%= link_to_remote "- #{resource.filename}", :url => update_resource_admin_article_path(:id => @article.id, :resource_id => resource.id), :method => :delete, :update => 'resources' %><br/>
  <% end %>
<% end %>

<h4><%= _("You can associate the following resources")%></h4>
<% for resource in @resources - @article.resources %>
  <%= link_to_remote "+ #{resource.filename}", :url => update_resource_admin_article_path(:id => @article.id, :resource_id => resource.id), :method => :put, :update => 'resources' %><br/>
<% end %>
